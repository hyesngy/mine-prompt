<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 로그인 버튼 -->
    <style name="LoginButton" parent="Widget.Material3.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:elevation">6dp</item>
        <item name="android:stateListAnimator">@animator/button_elevation</item>
    </style>

    <!-- 회원가입 버튼 -->
    <style name="SignupButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">12dp</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <!-- 입력 필드 -->
    <style name="LoginInputField" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <!-- 카드 스타일 -->
    <style name="LoginCard" parent="CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">12dp</item>
        <item name="cardBackgroundColor">@color/gray_600</item>
    </style>

    <!-- 앱 타이틀 -->
    <style name="AppTitle">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- 서브타이틀 -->
    <style name="AppSubtitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray_200</item>
        <item name="android:alpha">0.9</item>
    </style>

</resources>